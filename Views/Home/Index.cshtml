@{
    ViewBag.Title = "Home Page";
}
@if (User.IsInRole("Caf_Secretary"))
{
    <div class="row flex center-items padding-top-medium">
        <div id="#cart">
            @{Html.RenderAction("CartSummary", "ShoppingCart");}
        </div>
    </div>
    <hr />
}
<div class="padding-top-medium">
    <div class="row flex">
        <div class="col-md-3 clickable">
            <a href="@Url.Action("Menu", "Home", new { category = "Entrees" })">
                <div class="box">
                    <img src="~/Images/Burger.png" alt="Entrees" />
                    <h3>Entrees</h3>
                </div>
            </a>
        </div>

        <div class="col-md-3 clickable">
            <a href="@Url.Action("Menu", "Home", new { category = "Drinks" })">
                <div class="box">
                    <img src="~/Images/Hot drinks.png" alt="Drinks" />
                    <h3>Drinks</h3>
                </div>
            </a>
        </div>


        <div class="col-md-3 clickable">
            <a href="@Url.Action("Menu", "Home", new { category = "Snacks" })">
                <div class="box">
                    <img src="~/Images/Symbol 11 – 1.png" alt="Snacks" />
                    <h3>Snacks</h3>
                </div>
            </a>
        </div>

        <div class="col-md-3 clickable">
            <a href="@Url.Action("Menu", "Home", new { category = "DailySpecial" })">
                <div class="box">
                    <img src="~/Images/Symbol 13 – 1.png" alt="Daily Special" />
                    <h3>Daily Special</h3>
                </div>
            </a>
        </div>

    </div>
</div>